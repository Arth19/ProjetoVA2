module ula_ctrl (
    input ALUOp, // Sinal da unidade de controle
    input [5:0] func, // 6 bits menos significativos da instrução
    output reg [3:0] operation // Código da operação para a ULA
);

always @(ALUOp or func) begin
    if (ALUOp) begin
        case (func)
            6'b100000: operation = 4'b0010; // add
            6'b100010: operation = 4'b0110; // sub
            // Adicione mais casos para outras operações conforme necessário
        endcase
    end else begin
        // Lógica para ALUOp = 0 ou outros valores
        operation = 4'b0000; // Por exemplo, operação padrão é NOP
    end
end

endmodule
